<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tp1709017.yij_app.UpdateActivity">

    <TextView
        android:id="@+id/txt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="這是修改頁面"
        android:textSize="35sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textMoneyUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/inputMoneyUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textMoneyUpdate"
            android:layout_toRightOf="@+id/textMoneyUpdate"
            android:ems="10"
            android:inputType="number"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textPsUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textMoneyUpdate"
            android:layout_below="@+id/textMoneyUpdate"
            android:layout_marginTop="20dp"
            android:text="@string/textPS"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/inputPsUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textPsUpdate"
            android:layout_toRightOf="@+id/textPsUpdate"
            android:textSize="28sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_OK_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="確定"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_cancel_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>